    <%= form.label :content %>
    <%= form.text_field :content, id: :post_content, class: 'form-control', rows: 15 %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category, id: :post_category, class: 'form-control'%>
  </div>

